<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:padding="2dp">
    
   	<TextView
    	android:id="@+id/tournamentLive"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:gravity="left"
        android:paddingLeft="15dp"
        android:textColor="#7f8c8d"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />
    
    
        <TableLayout
            android:id="@+id/tableLayout_Lidin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2,3,4"
            android:layout_weight = "1"
        	android:layout_marginTop="5dp"
        	android:layout_marginBottom="15dp"
            android:layout_below="@id/tournamentLive" >

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/hometeamLive"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity = "right"
                    android:text = "HomeTeam"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_weight = "1" />

                <TextView
                    android:id="@+id/homescoreLive"
                    android:layout_height="wrap_content"
                    android:gravity = "right"
                    android:textColor="#000000"
                    android:layout_weight = "1"/>
                
                <TextView
                    android:id="@+id/bandstrik_men"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity = "center"
                    android:text = "-"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_weight = "1"/>

                <TextView
                    android:id="@+id/awayscoreLive"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity = "left"
                    android:textColor="#000000"
                    android:layout_weight = "1" />

                <TextView
                    android:id="@+id/awayteamLive"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity = "left"
                    android:text = "AwayTeam"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_weight = "1"/>

            </TableRow>

        </TableLayout>
        
       <TextView
    	android:id="@+id/newGoalLive"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:gravity="left"
        android:paddingLeft="15dp"
        android:textColor="#7f8c8d"
        android:textStyle="bold"
        android:layout_below="@id/tournamentLive" />

      <TextView
        android:id="@+id/Line00"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tableLayout_Lidin"
        android:layout_marginLeft = "15dp"
        android:layout_marginRight = "15dp"
        android:background="#7f8c8d" /> 
</RelativeLayout>