<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_islandsmeistarar_kvenna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="Íslandsmeistarar" />
        
      </LinearLayout>

      <Button
        android:id="@+id/islandsmeistarar_kvenna"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_trophy_grey"
        android:gravity="left|center_vertical"
		android:drawablePadding="3dp"
        android:paddingLeft="35dp"
        android:text="x 15"
        android:textStyle="bold"
        android:textSize="14sp" />
      
        <TextView
        android:id="@+id/TrophiesIcelandWomen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"
        android:textColor="@color/grey"
        android:text="@string/TrophiesIcelandWomenText" />
      
      	<TextView
        android:id="@+id/Line01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
		android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/light_grey" />
      	
	    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_bikarmeistarar_kvenna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="Bikarmeistarar" />
        
      </LinearLayout>

      <Button
        android:id="@+id/bikarmeistarar_kvenna"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_trophy_grey"
        android:gravity="left|center_vertical"
		android:drawablePadding="3dp"
        android:paddingLeft="35dp"
        android:text="x 9"
        android:textStyle="bold"
        android:textSize="14sp" />
      
        <TextView
        android:id="@+id/TrophiesCupWomen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"
        android:textColor="@color/grey"
        android:text="@string/TrophiesCupWomenText" />
      
      	<TextView
        android:id="@+id/Line02"
        android:layout_width="match_parent"
        android:layout_height="1dp"
		android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/light_grey" />
      	
 	    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/biggest_victory_women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="Stærsti deildarsigur" />
        
      </LinearLayout>

 	  <TextView
        android:id="@+id/sigrar_karlar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/grey"
        android:text="@string/BiggestWinWomenText" /> 	
    
</LinearLayout>