<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:padding="2dp"> 
    
<TextView
	 android:id="@+id/dateResults_men"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#7f8c8d"
        android:textSize="10sp"
        android:layout_marginTop="1dp"
		android:paddingLeft="5dp"
        android:text="27-11-2013"
        android:textStyle="bold" /> 
    
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/hometeamResults_men"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/homescoreResults_men"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/awayscoreResults_men"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/awayteamResults_men"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </TableRow>

        </TableLayout>
        
        <TextView
                    android:id="@+id/tournamentResults_men"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000" />
                
        <TextView
                    android:id="@+id/infoResults_men"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000" />
        
         <TextView
                    android:id="@+id/arenaResults_men"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"/>
        
      <TextView
        android:id="@+id/Line00"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#27ae60" /> 
</RelativeLayout>