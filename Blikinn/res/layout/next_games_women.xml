<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFFFFF">  
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/hometeamNextGames_women"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="6dip"
            android:paddingBottom="2dip" />
         <TextView
            android:id="@+id/awayteamNextGames_women"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp" 
            android:textStyle="bold"
            android:paddingTop="6dip"
            android:paddingBottom="2dip"
            android:gravity="left">
        </TextView>
        <TextView
            android:id="@+id/dateNextGames_women"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:paddingBottom="2dip">
        </TextView>
        <TextView
            android:id="@+id/tournamentNextGames_women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000" 
            android:textStyle="bold"
            android:gravity="left">
        </TextView>
        <TextView
            android:id="@+id/arenaNextGames_women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000" 
            android:textStyle="bold"
            android:gravity="left">
        </TextView>
        <TextView
            android:id="@+id/infoNextGames_women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000" 
            android:textStyle="bold"
            android:gravity="left">
        </TextView>
    </LinearLayout>

</LinearLayout>