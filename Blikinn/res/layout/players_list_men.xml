<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_background"
    android:orientation="horizontal"
    android:padding="2dp" >
    
    
	<LinearLayout android:id="@+id/thumbnail" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="3dp"		
        android:layout_alignParentLeft="true"
	    android:layout_marginRight="5dp">
        
		<ImageView     
			android:id="@+id/picture_men"   
	        android:layout_width="50dip"
	        android:layout_height="50dip"
	        android:src="@drawable/no_image" />
        
	</LinearLayout>
    
    <TextView
        android:id="@+id/name_men"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Nafn Leikmaður"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/playerPosition_men"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_men"
        android:textColor="#7f8c8d"
        android:textSize="10sp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Leikstaða"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/birthday_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/playerPosition_men"
        android:textColor="#7f8c8d"
        android:textSize="10sp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Fæddur:"
        android:textStyle="bold" />
    
    <TextView
            android:id="@+id/totalGames_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/transparent" 
            android:textSize="0sp">
        </TextView>
        <TextView
            android:id="@+id/totalGoals_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/transparent" 
            android:textSize="0sp">
        </TextView>
        <TextView
            android:id="@+id/leagueGames_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/transparent" 
            android:textSize="0sp">
        </TextView>
        <TextView
            android:id="@+id/leagueGoals_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/transparent" 
            android:textSize="0sp">
        </TextView>
        <TextView
            android:id="@+id/cupGames_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/transparent" 
            android:textSize="0sp">
        </TextView>
        <TextView
            android:id="@+id/cupGoals_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/transparent" 
            android:textSize="0sp">
        </TextView>
        <TextView
            android:id="@+id/europeGames_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/transparent" 
            android:textSize="0sp">
        </TextView>
        <TextView
            android:id="@+id/europeGoals_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/transparent" 
            android:textSize="0sp">
        </TextView>
         <TextView
            android:id="@+id/pictureText_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/transparent" 
            android:textSize="0sp">
        </TextView>
    
     <!-- Rightend Arrow -->    
     <ImageView android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:src="@drawable/ic_arrow"
     	android:layout_alignParentRight="true"
     	android:layout_centerVertical="true"/>

     <TextView
         android:id="@+id/birthday_men"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/birthday_text"
         android:layout_alignBottom="@+id/birthday_text"
         android:layout_alignLeft="@+id/birthday_text"
         android:gravity="right"
         android:paddingLeft="40dp"
         android:text="27.11.1990"
         android:textColor="#7f8c8d"
         android:textSize="10sp"
         android:textStyle="bold" />

</RelativeLayout>