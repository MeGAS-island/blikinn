<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:padding="2dp"> 
    
		<TableLayout
            android:id="@+id/tableLayout_upplysingar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2"
            android:layout_weight = "1"
        	android:layout_marginTop="15dp" >

           	<TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
                
                <TextView
                    android:id="@+id/tournamentNextGames_women"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="left"
                    android:paddingLeft="15dp"
                    android:textColor="#7f8c8d"
                    android:textStyle="bold" />
                

                
                <TextView
                    android:id="@+id/infoNextGames_women"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:paddingLeft="15dp"
                    android:textColor="#7f8c8d"
                    android:textStyle="bold"
					android:gravity="center"
                    android:layout_marginBottom="1dp" />
                
                
                <TextView
	 				android:id="@+id/dateNextGames_women"
      			  	android:layout_width="100dp"
        			android:layout_height="wrap_content"
        			android:textColor="#7f8c8d"
        			android:textSize="10sp"
        			android:layout_marginTop="1dp"
					android:paddingRight="15dp"
					android:gravity="right"
        			android:text="27-11-2013"
        			android:textStyle="bold" />


            </TableRow>

        </TableLayout>
        
		
		         <TextView
                    android:id="@+id/arenaNextGames_women"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tableLayout_upplysingar"
                    android:textSize="10sp"
                    android:paddingLeft="15dp"
                    android:gravity="left"
                    android:textColor="#7f8c8d"
                    android:textStyle="bold"/>

    
        <TableLayout
            android:id="@+id/tableLayout_Lidin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2"
            android:layout_weight = "1"
        	android:layout_marginTop="5dp"
        	android:layout_marginBottom="15dp"
            android:layout_below="@id/arenaNextGames_women" >

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/hometeamNextGames_women"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity = "right"
                    android:text = "HomeTeam"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_weight = "1" />

                
                <TextView
                    android:id="@+id/bandstrik_women"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity = "center"
                    android:text = "-"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_weight = "1"/>

                <TextView
                    android:id="@+id/awayteamNextGames_women"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity = "left"
                    android:text = "AwayTeam"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_weight = "1"/>

            </TableRow>

        </TableLayout>

      <TextView
        android:id="@+id/Line00"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tableLayout_Lidin"
        android:layout_marginLeft = "15dp"
        android:layout_marginRight = "15dp"
        android:background="#7f8c8d" /> 
</RelativeLayout>