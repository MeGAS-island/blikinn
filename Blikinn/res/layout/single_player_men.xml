<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#ffffff" >
  
  <TextView android:id="@+id/name_label_men"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#27ae60"
            android:textColor="#ffffff"/>
  
  <ImageView android:id="@+id/pictureLarge_men"   
	         android:layout_width="200dip"
	         android:layout_height="200dip"
	         android:paddingLeft="40dp"
	         android:src="@drawable/no_image"/>

  <TextView
      android:id="@+id/birthday_text"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="10dp"
      android:paddingTop="10dp"
      android:textColor="#000000"
      android:text="Fæðingardagur"
      android:textSize="15sp"
      android:textStyle="bold" />

  <TextView
      android:id="@+id/birthday_label_men"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="10dp"
      android:paddingTop="1dp"
      android:textColor="#000000"
      android:text="Placeholder" />
  
    <TextView
      android:id="@+id/position_text"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="10dp"
      android:paddingTop="3dp"
      android:textColor="#000000"
      android:text="Leikstaða"
      android:textSize="15sp"
      android:textStyle="bold" />

    <TextView
    	android:id="@+id/playerPosition_label_men"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Placeholder"
        android:paddingLeft="10dp"
      	android:paddingTop="1dp"
        android:textColor="#000000" />
    
    <TextView
      android:id="@+id/games_text"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="10dp"
      android:paddingTop="3dp"
      android:textColor="#000000"
      android:text="Fjöldi leikja"
      android:textSize="15sp"
      android:textStyle="bold" />

    <TextView
        android:id="@+id/totalGames_label_men"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:text="Placeholder"
        android:textColor="#000000" />
    
    <TextView
      android:id="@+id/goals_text"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="10dp"
      android:paddingTop="3dp"
      android:textColor="#000000"
      android:text="Fjöldi marka"
      android:textSize="15sp"
      android:textStyle="bold" />

    <TextView
        android:id="@+id/totalGoals_label_men"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:text="Placeholder"
        android:textColor="#000000" />

  <TextView android:id="@+id/leagueGames_label_men"
      		android:layout_width="fill_parent"
      		android:layout_height="wrap_content"
      		android:textStyle="bold"
      		android:textColor="#ffffff"/>
  <TextView android:id="@+id/leagueGoals_label_men"
      		android:layout_width="fill_parent"
      		android:layout_height="wrap_content"
      		android:textStyle="bold"
      		android:textColor="#ffffff"/>
  <TextView android:id="@+id/cupGames_label_men"
      		android:layout_width="fill_parent"
      		android:layout_height="wrap_content"
      		android:textStyle="bold"
      		android:textColor="#ffffff"/>
  <TextView android:id="@+id/cupGoals_label_men"
      		android:layout_width="fill_parent"
      		android:layout_height="wrap_content"
      		android:textStyle="bold"
      		android:textColor="#ffffff"/>
  <TextView android:id="@+id/europeGames_label_men"
      		android:layout_width="fill_parent"
      		android:layout_height="wrap_content"
      		android:textStyle="bold"
      		android:textColor="#ffffff"/>
  <TextView android:id="@+id/europeGoals_label_men"
      		android:layout_width="fill_parent"
      		android:layout_height="wrap_content"
      		android:textStyle="bold"
      		android:textColor="#ffffff"/>
</LinearLayout>